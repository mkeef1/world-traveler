extends ../shared/template
block content
  .col-xs-5
    form(role='form', method='post', action='/vacations')
      input#lat(type='hidden', name='lat')
      input#lng(type='hidden', name='lng')
      .form-group
          label(for='name') Vacation Name
          input#name.form-control(type='text', name='name', placeholder='Vacation Name')
        .form-group
          label(for='start') Start
          input#start.form-control(type='date', name='start', placeholder='mm/dd/yyyy')
        .form-group
          label(for='end') End
          input#end.form-control(type='date',name='end', placeholder='mm/dd/yyyy')
        button(type='submit') Submit
  .col-xs-7

block scripts
  script(src='/js/user/new-vacation.js')
